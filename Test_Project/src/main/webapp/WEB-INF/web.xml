<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Informations de l'application -->
    <display-name>Test Framework MVC</display-name>
    <description>Application de test pour le framework MVC custom</description>

    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value> <!-- Pas de listing de dossiers -->
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Configuration du servlet principal -->
    <servlet>
        <servlet-name>FrontServlet</servlet-name>
        <servlet-class>mg.etu3273.framework.FrontServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping> -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <!-- Ajoutez pour les images si besoin -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    
    <!-- Mapping du servlet - ALTERNATIVE PROPRE -->
    <!-- Option 1: Intercepter tout sauf les ressources statiques -->
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <!-- Option 2: Intercepter seulement des patterns spécifiques (plus propre) -->
    <!--
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/dept/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    -->

    <!-- Page d'accueil par défaut -->
    <!-- <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list> -->

    <!-- Configuration du timeout de session -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Gestion des erreurs -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error500.html</location>
    </error-page>

</web-app>